{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/env.d.ts",       // <-- FIX: Ensure this line is present to fix TS7016
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,    // <-- FIX: This must be true for project references
    "noEmit": false,      // <-- FIX: Must be false/removed when composite is true in a referenced project
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
